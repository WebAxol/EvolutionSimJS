    <script src="/js/runExperiment/simulator/layers/Ecosystem/Mutator.js"></script>
    <script src="/js/runExperiment/simulator/layers/Ecosystem/OrganismBuilder.js"></script>
    <script src="/js/runExperiment/simulator/layers/Ecosystem/Ecosystem.js"></script>

    <!--Init World-->

    <script src="/js/runExperiment/simulator/init/initConstants.js"></script>
    <script src="/js/runExperiment/simulator/init/initCollections.js"></script>
    <script src="/js/runExperiment/simulator/init/initAgentTypes.js"></script>
    <script src="/js/runExperiment/simulator/init/initServices.js"></script>
