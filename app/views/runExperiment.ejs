    <script src="/js/runExperiment/simulator/layers/framework/CollectionManager.js"></script>
    <script src="/js/runExperiment/simulator/layers/framework/ServiceManager.js"></script>
    <script src="/js/runExperiment/simulator/layers/framework/EventManager.js"></script>
    <script src="/js/runExperiment/simulator/layers/framework/World.js"></script>

    <!-- Modules -->

    <script src="/js/runExperiment/simulator/utils/Vector2D.js"></script>
    <script src="/js/runExperiment/simulator/services/Renderer.js"></script>
    <script src="/js/runExperiment/simulator/services/Motion.js"></script>
    <script src="/js/runExperiment/simulator/services/AgentBehaviour.js"></script>
    <script src="/js/runExperiment/simulator/services/Generations.js"></script>
    <script src="/js/runExperiment/simulator/services/Statistics.js"></script>

